@model Timur.Models.Film
<h2>Новый фильм</h2>
<title>Film create</title>
<style>
    .za {
        display: inline-block;
        width: 5em;
        height: 2.16em;
        line-height: 2em;
        vertical-align: middle;
        text-align: center;
        text-decoration: none;
        user-select: none;
        color: black;
        outline: none;
        border: 1px solid rgba(0,0,0,.4);
        border-top-color: rgba(0,0,0,.3);
        border-radius: 2px;
        background: linear-gradient(rgb(255,255,255), rgb(240,240,240));
        box-shadow: 0 0 3px rgba(0,0,0,0) inset, 0 1px 1px 1px rgba(255,255,255,.2), 0 -1px 1px 1px rgba(0,0,0,0);
        transition: .2s ease-in-out;
    }

        .za:hover:not(:active) {
            box-shadow: 0 0 3px rgba(0,0,0,0) inset, 0 1px 1px 1px black, 0 -1px 1px 1px black;
            color: black;
        }

        .za:active {
            background: linear-gradient(rgb(62,66,77), rgb(235,235,235));
            color: black;
            box-shadow: 0 0 3px rgba(0,0,0,.5) inset, 0 1px 1px 1px rgba(255,255,255,.4), 0 -1px 1px 1px rgba(0,0,0,.1);
        }
</style>
@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Film_name, "Название фильма")
    <br />
    @Html.EditorFor(model => model.Film_name)
    <br />
    @Html.LabelFor(model => model.Film_year, "Год выпуска фильма")
    <br />
    @Html.EditorFor(model => model.Film_year)
    <br />
    @Html.LabelFor(model => model.Film_leng, "Длительность фильма")
    <br />
    @Html.EditorFor(model => model.Film_leng)
    <br />
    @Html.LabelFor(model => model.Film_price, "Цена фильма")
    <br />
    @Html.EditorFor(model => model.Film_price)
    <br />
    @Html.LabelFor(model => model.Film_description, "Описание фильма")
    <br />
    @Html.EditorFor(model => model.Film_description)
    <br />
    @Html.LabelFor(model => model.Film_picture, "путь к картинке фильма")
    <br />
    @Html.EditorFor(model => model.Film_picture)
    <br />
    <br />
    <input style="height:28px;" type="submit" value="Добавить" />
    @Html.ActionLink("Назад", "GenreList", "Admin", null, new { @class = "za" })

}