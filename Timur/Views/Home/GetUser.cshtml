@using Timur.Models
@model Timur.Models.User






<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link type="text/css" rel="stylesheet" href='@Url.Content("~/Content/Site.css")' />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("BosFilm", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li style="margin-left:100px; margin-top:15px; color: rgb(157,157,157);"> @User.Identity.Name :</li>
                    <li>@Html.ActionLink("Выйти", "Exit", "Account")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div style="display:flex">
                <div>
                    <img src="~/Content/Images/@Html.DisplayFor(model=>model.User_picture)" width="480" height="640">
                </div>

                <div style="font-size:25px; font-weight:bold; text-align:center; margin-left: 200px; margin-top:150px;">
                    <p>
                      Логин пользователя :  @Html.DisplayFor(model => model.Login)
                    </p>
                    <p>
                      Имя пользователя :   @Html.DisplayFor(model => model.Fname)
                    </p>
                    <p>
                      Фамилия пользователя :  @Html.DisplayFor(model => model.Lname)
                    </p>
                </div>
        </div>
        <p>
            @*@Html.ActionLink("Изменить информацию", "Edit", new { id = Model.Id }) |*@
            @Html.ActionLink("Вернуться на главную", "Index") |
           @*//@Html.ActionLink("Добавить карту", "UpBalance") |*@
        </p>
        <div style="display:flex">
            @foreach (Film c in Model.Films)
            {
                {
            <div style="margin-top:60px;    ">
                <p style="margin-right:15px; font-size:18px; text-align:center; font-weight:bold;"> @c.Film_name </p>
                <p style="margin-right:15px; font-size:18px; text-align:center; font-weight:bold;"> @c.Film_year </p>
                <p style="margin-right:15px; font-size:18px; text-align:center; font-weight:bold;"> @c.Film_leng </p>
                
            </div>

                }
            <div> <img src="~/Content/Images/@c.Film_picture" width="160" height="240"></div>
            }
        </div>
        </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>


